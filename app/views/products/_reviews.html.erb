<% if current_user %>

<h4>Reviews for <%= @product.name %></h4>

	<% @product.reviews.each do |review| %>
	<div class= 'review'>

		<p class="comment">
			<%= review.comment %>
		</p>

		<div class="poster">
			<% if review.user != nil %>
			<em> Posted by <%= review.user.name %> on: <%= review.created_at %></em>
			<% end %>
		</div>
	</div>
	<% end %>
<% else %>
	<p>Please <%= link_to "log in", new_session_path %> to add a review.</p>
<% end %>